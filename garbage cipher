    def vigenere(ptext, ky)
    k_length = len(ky)
    k_int = ord(i) for i in ky
    ptext_int = ord(i) for i in ptext_int
    ctext = ''
    for i in range(len(ptext_int)):
        val = (ptext_int(i) + k_int(i % k_length)) % 26
        ctext += chr(val + 65)
    return ctext
    
    alphabet = 'abcdefghijklmnopqrstuvwxyz'
    encrypted = ''
    for char in ptext:
        if char == ' ':
            encrypted = encrypted + ' '
        else:
            rotated_index = alphabet.index(char) + num
            if rotated_index < 26:
                encrypted = encrypted + alphabet[rotated_index]
            else:
                encrypted = encrypted + alphabet[rotated_index % 26]
    return encrypted



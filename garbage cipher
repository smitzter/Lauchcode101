   def encrypt(ptext, ktext):
    ctext = ""
    #k_length = len(ktext)
    for i in str(ptext):
        p_int = ord(i)
        for i in str(ktext):
            k_int = ord(i)
        val = (p_int + k_int) % 26
        ctext += chr(val + 65)
    return ctext

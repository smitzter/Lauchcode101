#this, i am super excited about bc this can be used to search user inputted data from places like social media 
#and bring back a return of how many times a word or such as used. obvs more complicated tho.

def analyze_text(x):
 
    n = 0
    for i in x:
        if i.isalpha():
            n += 1      
    
    en = x.lower().count('e')
    ep = en / n * 100
    ep2 = str(ep)
    n2 = str(n)
    en2 = str(en)
    return str("The text contains " + n2 + " alphabetic characters, of which " + en2 + " (" + ep2 + "%) are 'e'.")
    #r_str = str("The text contains " + n2 + " alphabetic characters, of which " + en2 + " (" + ep2 + "%) are 'e'.")
    #return r_str
 

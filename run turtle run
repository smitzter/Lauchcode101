import turtle

wn = turtle.Screen()
tut = turtle.Turtle()
numb = int(input("enter number of sides"))
length = float(input("how long?"))
deg = int(90 / numb) 
color = str(input("what color do you want the turtle?"))
fill = str(input("what color do you want the stage?"))
tut.color(color)
wn.bgcolor(fill)

for i in range(numb):
    tut.left(deg)
    tut.forward(length)
    

wn.exitonclick()
